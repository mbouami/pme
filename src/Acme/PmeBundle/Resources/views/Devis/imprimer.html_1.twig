{% extends '::base.html.twig' %}

{% block title %}
Impression du devis {{ entity.reference }} 
{% endblock %} 
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/mescss.css') }}" />
{% endblock %}
{% block javascripts %}               
        <script src='{{ asset('js/mesfonctions.js') }}'></script>          
{% endblock %}  
{% block body -%} 
        <reference_devis>
            <article>                
                <h1>Devis</h1>
                <p>{{ entity.reference }}</p>
            </article>
        </reference_devis>    
        <adresse_destinataire>
            <article>                
                <h1>Destinataire</h1>                
                {{ entity.organisation }}<br>Tél : {{ entity.organisation.tel }}<br>{{ entity.organisation.adresse }}
                <br>{{ entity.organisation.ville.cp }} {{ entity.organisation.ville.nom }}({{ entity.organisation.ville.pays }})
                <br>A l'attention de {{ entity.contact }}
            </article>
        </adresse_destinataire>
        <table class="entete_devis">
            <thead>
            <th>Date</th>
            <th>Référence</th> 
            <th>Votre Correspondant</th>
            <th>Page</th>         
            </thead> 
            <tr>
                <td style="text-align: center">{{ entity.createdAt|date("d/m/Y") }}</td>
                <td style="text-align: center">{{ entity.reference }}</td>    
                <td style="text-align: center">{{ entity.referent }}</td>
                <td style="text-align: center">[page]</td>          
            </tr>
        </table>
        <table class="lignes_devis">
            <thead>
            <th>N°</th>
            <th>Référence</th> 
            <th>Libellé</th>
            <th>Qte</th>     
            <th>Prix HT</th> 
            <th>Remise</th>
            <th>Total HT</th>       
            </thead>   
            {% for lignedevis in entity.lignesdevis %}
            <tr>
                <td style="text-align: center">{{ lignedevis.ordre|number_format }}</td>
                <td style="text-align: center">{{ lignedevis.reference|e }}</td>  
                <td style="text-align: left">{{ lignedevis.description| raw }}</td>
                <td style="text-align: center">{{ lignedevis.quantite|number_format }}</td>   
                <td style="text-align: center">{{ lignedevis.prixht|number_format(2, '.', ' ') }} &euro;</td>  
                <td style="text-align: center">{{ lignedevis.remise|number_format(2, '.', ' ') }} %</td>
                <td style="text-align: right">{{ lignedevis.totalht|number_format(2, '.', ' ') }} &euro;</td>         
            </tr>
            {% endfor %}  
            <tr>
                <td ></td>
                <td ></td>  
                <td ></td>
                <td ></td>   
                <td ></td> 
                <td style="text-align: left">Frais de port </td>
                <td style="text-align: right">{{ entity.fraisport|number_format(2, '.', ' ') }} &euro;</td> 
            </tr>
            <tr>
                <td ></td>
                <td ></td>  
                <td ></td>
                <td ></td>   
                <td ></td> 
                <td style="text-align: left">Total HT </td>
                <td style="text-align: right">{{ entity.totalht|number_format(2, '.', ' ') }} &euro;</td> 
            </tr>    
            <tr>
                <td ></td>
                <td ></td>  
                <td ></td>
                <td ></td>   
                <td ></td> 
                <td style="text-align: left">TVA ({{ entity.tauxtva|number_format(2, '.', ' ') }} %) </td>
                <td style="text-align: right">{{ entity.totaltva|number_format(2, '.', ' ') }} &euro;</td> 
            </tr>   
            <tr>
                <td ></td>
                <td ></td>  
                <td ></td>
                <td ></td>   
                <td ></td> 
                <td style="text-align: left">Total TTC </td>
                <td style="text-align: right">{{ entity.totalttc|number_format(2, '.', ' ') }} &euro;</td> 
            </tr>     
        </table>
            <paiement>
                <article>                 
                    Lien de paiement sécurisé : <a href="{{ paiement.valeur }}?email={{ entity.contact.email }}&montant={{ entity.totalttc|number_format(2, '.', '') }}&reference={{ entity.reference }}">{{ paiement.valeur }}?email={{ entity.contact.email }}&montant={{ entity.totalttc|number_format(2, '.', '') }}&reference={{ entity.reference }}</a>
                    <br>Validité de l'offre : 15 jours
                    <br>Condition de règlement : {{ entity.modereglement }}
                </article>                 
            </paiement> 
            <condition>
                <article>                
                    <p>Nos tarifs comprennent un service d'assistance téléphonique d'installation sur les logiciels proposées</p>
                </article>                
            </condition>  
            <signature> 
                <div class="imagesignature">
                    <img src="{{ signature }}" alt="{{ entity.referent }}"> 
                    <div class="desc"><h4>{{ entity.referent }} </h4></div>
                </div>               
            </signature>                
            
